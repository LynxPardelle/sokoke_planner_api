# Environment Configuration for Sokoke Planner API
# Copy this file to .env and update the values for your environment

# Server Configuration
PORT=3000
NODE_ENV=development
LOGGER_LEVEL=log

# Database Configuration  
MONGODB_URI=mongodb://localhost:27017/sokoke_planner

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEYS=api-key-1,api-key-2,api-key-3

# Session Configuration
FASTIFY_SECURE_SESSION_KEY=your-32-character-session-key-here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Sokoke Planner <noreply@sokoke-planner.com>"

# Application URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

